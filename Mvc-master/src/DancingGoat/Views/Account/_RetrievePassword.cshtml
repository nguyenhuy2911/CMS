@model DancingGoat.Models.Account.RetrievePasswordViewModel

<div class="logon-panel-password-retrieval">
    <br />
    <h2>@ResHelper.GetString("DancingGoatMvc.PasswordReset.Heading")</h2>

    <div id="retrievePassword">
        @using (Ajax.BeginForm("RetrievePassword", new AjaxOptions { UpdateTargetId = "retrievePassword", InsertionMode = InsertionMode.ReplaceWith }))
        {
            @Html.AntiForgeryToken()
            <p>@ResHelper.GetString("DancingGoatMvc.PasswordReset.Description")</p>
            <div class="form-horizontal" role="form">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    <div class="editing-form-label-cell">
                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="editing-form-value-cell">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
                <input type="submit" value="@ResHelper.GetString("DancingGoatMvc.General.Submit")" class="btn btn-primary" />
            </div>
        }

        <script type="text/javascript">
            $.validator.unobtrusive.parse(document);
        </script>
    </div>
</div>