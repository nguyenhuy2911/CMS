@model DancingGoat.Models.Brewers.BrewerFilterViewModel

<h4>@ResHelper.GetString("DancingGoatMvc.Brewers.Manufacturers")</h4>
@Html.EditorFor(model => Model.Manufacturers)

<h4>@ResHelper.GetString("DancingGoatMvc.Brewers.Price")</h4>
@Html.EditorFor(model => Model.Prices)

<h4>@ResHelper.GetString("DancingGoatMvc.Brewers.PublicStatus")</h4>
@Html.EditorFor(model => Model.PublicStatuses)

<h4>@ResHelper.GetString("DancingGoatMvc.Brewers.Availability")</h4>
<span class="checkbox js-postback">
    @Html.CheckBoxFor(model => model.OnlyInStock)
    @Html.LabelFor(model => model.OnlyInStock, ResHelper.GetString("DancingGoatMvc.Brewers.OnlyInStock"))
</span>