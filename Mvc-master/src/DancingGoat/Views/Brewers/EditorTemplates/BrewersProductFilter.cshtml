@model List<DancingGoat.Models.Brewers.BrewersProductFilterCheckboxViewModel>

@for (var i = 0; i < Model.Count; i++)
{
    @Html.HiddenFor(m => Model[i].Value)
    @Html.HiddenFor(m => Model[i].DisplayName)
    <span class="checkbox js-postback">
        @Html.CheckBoxFor(m => Model[i].IsChecked)
        @Html.LabelFor(m => Model[i].IsChecked, @ResHelper.LocalizeString(Model[i].DisplayName))
    </span>
}
