@model DancingGoat.Models.Subscription.SubscribeModel

@using (Ajax.BeginForm("Subscribe", "Subscription", null, new AjaxOptions
{
    HttpMethod = "POST",
    InsertionMode = InsertionMode.Replace,
    UpdateTargetId = "SubscribeForm"
}, new { id = "SubscribeForm" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidatedEditorFor(m => m.Email)

    <input type="submit" value="@ResHelper.GetString("DancingGoatMvc.News.Subscribe")" class="btn btn-primary" />
}
